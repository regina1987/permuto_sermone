<h2 class="mb-2 text-center">My languages</h2>
<div class=" m-4 align-self-center mr-3">

  <div class="row">

  <div class="">
  <div class="card-body">
    <h4><%= "Quiero practicar" %></h4>
      <h5><%= current_user.practico %></h5>
  </div>

  <div class="form-group">
  <div class="card-body">
      <h4><%=  "Also I'm intrested in " %></h4>

        <% current_user.idiomas.each do |language|%>
        <h5><%= language.name %>
        <%= link_to 'x' ,delete_user_language_path(current_user, language), method: :delete, class:"btn btn-outline-dark btn-sm"%>
        </h5>
        <% end %>
  </div>

  <div class="form-grouh5p">
  <div class="card-body">
<%= form_with(model: current_user.idiomas.build, url: users_languages_path(current_user),local:true) do |ff|%>
  <%= ff.text_field :name%>
<button type="button" class="btn btn-dark"><%= ff.submit%></button>

        <% end %>
  </div>
  </div>
</div>
</div>
</div>
</div> 
