<% if can? :manage, User %>
<p id="notice"><%= notice %></p>

<h1>Staffs</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>mail</th>
      <th colspan="3"></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show',users_show_path(user.id) %></td>
        <td><%= link_to 'Destroy',delete_user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
 <%= "You are not admin" %>
 <%end %>
